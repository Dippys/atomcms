{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "link:atom": "shx rm -rf $(pwd)/public/images && shx ln -s $(pwd)/resources/views/atom/images $(pwd)/public/images",
        "dev:atom": "vite --config resources/views/atom/vite.config.js",
        "build:atom": "vite build --config resources/views/atom/vite.config.js",
        "link:dusk": "shx rm -rf $(pwd)/public/images && shx ln -s $(pwd)/resources/views/dusk/images $(pwd)/public/images",
        "dev:dusk": "vite --config resources/views/dusk/vite.config.js",
        "build:dusk": "vite build --config resources/views/dusk/vite.config.js",
        "link:base": "shx rm -rf $(pwd)/public/images && shx ln -s $(pwd)/resources/views/base/images $(pwd)/public/images",
        "dev:base": "vite --config resources/views/base/vite.config.js",
        "build:base": "vite build --config resources/views/base/vite.config.js",
        "link:habhub": "shx rm -rf $(pwd)/public/images && shx ln -s $(pwd)/resources/views/habhub/images $(pwd)/public/images",
        "format": "prettier \"resources/**/*.{js,ts,vue,blade}\" --write"
    },
    "devDependencies": {
        "@alpinejs/focus": "^3.10.3",
        "@prettier/plugin-php": "^0.19.3",
        "@shufo/prettier-plugin-blade": "^1.8.6",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.9",
        "alpinejs": "^3.10.3",
        "autoprefixer": "^10.4.7",
        "axios": "^1.6.4",
        "interactjs": "^1.10.27",
        "laravel-vite-plugin": "^1.0",
        "lodash": "^4.17.19",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "tailwindcss": "^3.1.6",
        "toastify-js": "^1.12.0",
        "turbolinks": "^5.2.0",
        "vite": "^5.0"
    },
    "dependencies": {
        "shx": "^0.3.4"
    }
}
